# Social Media Configuration for WhisperVault
# Copy this file to .env and fill in your actual credentials

# Facebook Configuration
FACEBOOK_ACCESS_TOKEN=your_facebook_page_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# Instagram Configuration  
INSTAGRAM_USERNAME=your_instagram_business_username
INSTAGRAM_PASSWORD=your_instagram_password

# Twitter/X Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Redis Configuration (for rate limiting and task queue)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Moderation Settings
ENABLE_AI_MODERATION=true
TOXICITY_THRESHOLD=0.7
PROFANITY_THRESHOLD=0.8
HATE_SPEECH_THRESHOLD=0.6

# Social Media Posting Settings
ENABLE_SOCIAL_POSTING=true
DEFAULT_POSTING_DELAY_MINUTES=5
MAX_POSTS_PER_HOUR_FACEBOOK=25
MAX_POSTS_PER_HOUR_INSTAGRAM=25  
MAX_POSTS_PER_HOUR_TWITTER=50

# Image Generation Settings
DEFAULT_IMAGE_THEME=dark
IMAGE_QUALITY=95
SUPPORTED_PLATFORMS=facebook,instagram,twitter,linkedin
